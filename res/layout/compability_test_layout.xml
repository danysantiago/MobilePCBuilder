<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	
	<AbsoluteLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:id="@+id/absolute">
		
		<ImageView android:layout_height="wrap_content" android:src="@drawable/button_mb"
			android:id="@+id/image_mb" android:layout_width="wrap_content"
			android:layout_x="48dip" android:layout_y="16dip"></ImageView>
			
		<Button android:id="@+id/button_cpu" android:background="@drawable/button_cpu"
			android:layout_height="wrap_content" android:text="CPU"
			android:textStyle="bold" android:layout_width="wrap_content"
			android:layout_x="53dip" android:layout_y="20dip" android:onClick="cpu_button"></Button>
			
		<Button android:id="@+id/button_vga" android:background="@drawable/button_vga"
			android:layout_height="wrap_content" android:text="VGA"
			android:textStyle="bold" android:layout_width="wrap_content"
			android:layout_x="49dip" android:layout_y="138dip" android:onClick="vga_button"></Button>
			
		<Button android:id="@+id/button_psu" android:background="@drawable/button_psu"
	android:layout_height="wrap_content" android:text="PSU"
	android:textStyle="bold" android:layout_width="wrap_content"
	android:layout_x="59dip" android:layout_y="180dip" android:onClick="psu_button"></Button>

	<Button android:id="@+id/button_hdd" android:background="@drawable/button_hdd"
		android:layout_height="wrap_content" android:text="HDD"
		android:textStyle="bold" android:layout_width="wrap_content"
		android:layout_x="236dip" android:layout_y="22dip" android:onClick="hdd_button"></Button>
		
	<Button android:layout_height="wrap_content" android:id="@+id/button_ram"
		android:layout_width="wrap_content" android:onClick="ram_button"
		android:textStyle="bold" android:background="@drawable/button_ram"
		android:layout_x="140dip" android:layout_y="6dip"></Button>
		
	<TextView android:layout_height="wrap_content" android:text="RAM"
		android:layout_width="wrap_content" android:id="@+id/textView_ram"
		android:textStyle="bold" android:textColor="#000000" android:layout_x="172dip"
		android:layout_y="118dip"></TextView>
			
	</AbsoluteLayout>
	
	<ListView android:layout_width="fill_parent" android:id="@+id/listView_components"
		android:layout_height="wrap_content" android:layout_alignParentBottom="true"
		android:layout_below="@+id/absolute"></ListView>
		
</RelativeLayout>